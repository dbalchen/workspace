source /apps/ebi/ebiap1/.bashrc

export UTLITIES_HOME=/apps/amduser/prodtc1/eps/usageUtlities/

SALUTATION="Dearest OPS... Some Pre-Paid VoLTE customers have experienced calls of extreme duration(see list below). Please open an ecalated Remedy ticket to AMDOCS Tier 2 Billing." 

SUBJECT="ALERT!!!! Pre-Paid VoLTE Long duration issue -- Open an Escalated Remedy Ticket to Amdocs"

EMAIL='USCDLISBillingandRevenueOpsOn-Call@uscellular.com:USCDLISOps-BillingandAROperations@uscellular.com'

HEADING="Customer ID\tRESOURCE_VALUE\tSYS_CREATION_DATE\tL9_SYSTEM_SERVICE\tL3_DURATION\tL3_ROUNDED_UNIT\tL3_CHARGE_AMOUNT\tL3_CALL_DIRECTION\tL9_ROAMING_IND\tL9_CALLING_NUMBER\tL9_CALLED_NUMBER\tSERVICE_FILTER\tL9_DIALED_DIGITS\tL9_TOLL_DURATION\tL9_BALANCE_AMOUNT\tL9_DAILY_SURCHARGE_IND\tL9_ROAMING_IND\n"

(printf "${HEADING}";${UTLITIES_HOME}/lib/bin/printSQL.pl ${UTLITIES_HOME}/lib/sql/longVoLTEDuration.sql) | ${UTLITIES_HOME}/lib/bin/toEmail.py -sb "${SUBJECT}" -s "${SALUTATION}" -e "${EMAIL}" 1>> ${UTLITIES_HOME}/log/findLongDuration.log 2>> ${UTLITIES_HOME}/log/findLongDuration.err 
